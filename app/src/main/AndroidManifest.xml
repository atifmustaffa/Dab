<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atif.dab">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DabTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/DabTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewDebtActivity" />
        <activity android:name=".AddEditActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".SettingsActivity" />
        <activity android:name=".FeedbackActivity" android:windowSoftInputMode="stateHidden"/>

        <receiver android:name=".AlertReceiver"/>
    </application>

</manifest>